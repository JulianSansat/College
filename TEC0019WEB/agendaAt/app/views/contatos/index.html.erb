<p id="notice"><%= notice %></p>

<h1>Listing Contatos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Img</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
    <% if (contato.User_id ==  session[:user_id])%>   
      <tr>
        <td><%= contato.name %></td>
        <td><%= contato.email %></td>
        <td><%= contato.tel %></td>
        <td><%= contato.img %></td>
        <td><%= contato.User %></td>
        <td><%= link_to 'Show', contato %></td>
        <td><%= link_to 'Edit', edit_contato_path(contato) %></td>
        <td><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

